<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Wallpaper">
  	    <item name="android:actionMenuTextColor">#fff</item>
    </style>
    
     <style name="BookmarksTheme" parent="@android:style/Theme.Holo.Light">
    </style>
    
	<style name="AnimationPopup" parent="android:Animation">
	    <item name="android:windowEnterAnimation">@anim/popup_enter</item>
	    <item name="android:windowExitAnimation">@anim/popup_exit</item>
	</style>

	<style name="dialog_color_pciker_view_portrait">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
	
	<style name="CustomLightTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/CustomLightTheme.ActionBar</item>
    </style>

    <style name="CustomLightTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#373737</item>
        <item name="android:titleTextStyle">@style/CustomLightTheme.ActionBar.Text</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="CustomLightTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>
  
</resources>